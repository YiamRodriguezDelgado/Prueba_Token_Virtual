          var digits = '0123456789';
          let OTP = '';
          for (let i = 0; i < 6; i++ ) {
              OTP += digits[Math.floor(Math.random() * 10)];
          }
        
          document.getElementById("password").value=OTP;
          alert ("Su OTP es : " + OTP);
      }
